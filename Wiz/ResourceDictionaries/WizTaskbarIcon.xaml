<ResourceDictionary x:Class="Wiz.ResourceDictionaries.WizTaskbarIcon"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar">

    <tb:TaskbarIcon x:Key="WizTaskbarIcon"
                        IconSource="/Resources/WiZ.ico">

        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Name="ExitApp_MenuItem" Header="Exit" Click="ExitApp_MenuItem_Click"/>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>